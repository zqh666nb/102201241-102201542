/* 页面整体容器 */
html, body {
  height: 100%;
  margin: 0;
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  min-height: 100vh;
  background: linear-gradient(to bottom, #a8d8ff, #e1f5fe); /* 渐变浅蓝色背景 */
  padding: 20px;
  box-sizing: border-box;
}

/* 表单项容器 */
.form-item {
  width:90%;
  margin-bottom: 10px;
  padding: 15px;
  background-color: #ffffff;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

/* 标签文本样式 */
.label {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
  display: block;
}

/* 输入框和文本域的样式 */
.input{
  width: 100%;
  height:50px;
  padding: 12px;
  font-size: 15px;
  color: #333;
  border: 1px solid #ddd;
  border-radius: 6px;
  background-color: #f9f9f9;
  box-sizing: border-box;
  margin-top: 10px;
}

.textarea {
  width: 100%;
  padding: 12px;
  font-size: 15px;
  color: #333;
  border: 1px solid #ddd;
  border-radius: 6px;
  background-color: #f9f9f9;
  box-sizing: border-box;
  margin-top: 10px;
}
/* 提交按钮的样式 */
.submit-button {
  width: 100%;
  padding: 15px;
  font-size: 16px;
  color: #fff;
  background-color: #007aff;
  border: none;
  border-radius: 8px;
  text-align: center;
  margin-top: 10px;
  margin-bottom: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  transition: background-color 0.3s ease;
}

.submit-button:hover {
  background-color: #30acff;
}
